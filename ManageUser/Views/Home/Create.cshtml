@model UserModel

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h2>Provide user details</h2>
            <form method="post">
            <div class="form-group">
                <label>Name</label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label>Email</label>
                    <input type="text" asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label>Address</label>
                    <input type="text" asp-for="Address" class="form-control" />
            </div>
                <div class="form-group">   
                    <br />
                    <input type="submit" asp-action="Create" asp-controller="Home" value="Create" class="btn btn-sm btn-success" />
                    <a asp-action="Index" asp-controller="Home" class="btn btn-sm btn-info">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>